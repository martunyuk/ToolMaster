<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/soft_blue" android:startColor="@color/dark_gray" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_text" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/muted_orange" android:startColor="@color/bright_yellow" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
